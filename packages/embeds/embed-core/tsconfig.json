{
  "extends": "@calndrbrnd/tsconfig/base.json",
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@calndrbrnd/embed-react": ["../embed-react/src"],
      "@calndrbrnd/embed-snippet": ["../embed-snippet/src"]
    }
  },
  "include": ["src", "env.d.ts", "index.ts", "*.ts"],
  "exclude": ["dist", "build", "**/node_modules/**"]
}
